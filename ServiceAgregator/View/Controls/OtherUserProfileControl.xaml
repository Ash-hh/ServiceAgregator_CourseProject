<UserControl x:Class="ServiceAgregator.View.Controls.OtherUserProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceAgregator.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>            
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Image Source="{Binding UserProfile.User_Image}"/>
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding UserProfile.User_Name}"/>
            <TextBlock Text="{Binding UserProfile.Date_Registration}"/>
            <TextBlock Text="{Binding UserProfile.Rating}"/>
            <Label>
                <Hyperlink Command="{Binding UserServices}">User Services</Hyperlink>
            </Label>
        </StackPanel>
        
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox
                Margin="5"
                Text="{Binding ReviewText}"/>
            <Button 
                Grid.Column="1" Content="Send Review" Margin="10" Command="{Binding SendReview}"/>
        </Grid>
        
        <DataGrid Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding UserProfile.ReviewsRecepient}" Width="500" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Review Date" Binding="{Binding Review_Date}"/>
                <DataGridTextColumn Header="Reviewer Name" Binding="{Binding UsersSender.User_Name}"/>
                <DataGridTextColumn Header="Text" Binding="{Binding Text}"/>
            </DataGrid.Columns>           
        </DataGrid>
    </Grid>
</UserControl>
