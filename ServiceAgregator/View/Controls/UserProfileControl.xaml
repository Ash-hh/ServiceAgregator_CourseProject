<UserControl x:Class="ServiceAgregator.View.Controls.UserProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceAgregator.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <ScrollViewer>
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>

                </Grid.RowDefinitions>

               
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image Source="/View/Resources/UserIcon.png" Height="Auto" Width="120px"/>

                    <Label HorizontalAlignment="Center"
                       Margin="10 0"
                       FontSize="15"
                           Grid.Row="1">
                        <Hyperlink Command="{Binding UpdateViewCommand}" CommandParameter="YourProfile">Upload Image</Hyperlink>
                    </Label>

                </Grid>

                <StackPanel Grid.Row="1">
                    <Label Content="{Binding Path=CurrentUser.User_Name}"
                           HorizontalAlignment="Center"
                           FontSize="15"
                           Margin="0 5"/>

                    <Label Content="{Binding Path=CurrentUser.Login}"
                           HorizontalAlignment="Center"
                           FontSize="15"/>
                </StackPanel>
            </Grid>



        </ScrollViewer>

    </Grid>
</UserControl>
