<UserControl x:Class="ServiceAgregator.View.Controls.UserProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceAgregator.View.Controls"           
             mc:Ignorable="d" 
             d:DesignHeight="950" d:DesignWidth="800" >


    <UserControl.Resources>

        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style TargetType="Separator">
            <Setter Property="Margin" Value="15 0 15 0"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        
    </UserControl.Resources>


    <Grid Background="#eef0f6">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>

        </Grid.RowDefinitions>

        <!--Image-->
        <Grid x:Name="UserInfo" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="{Binding Path=CurrentUser.User_Image}" Height="Auto" Width="Auto" MaxHeight="300" MaxWidth="300"/>

            <Label                       
                           Grid.Row="1">
                <Hyperlink x:Name="UploadLink" Command="{Binding UploadImage}">Upload Image</Hyperlink>
            </Label>

            <!--Personal Info-->
            <Grid Grid.Column="1" Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="0.7*"/>
                </Grid.RowDefinitions>


                <Label
                            Content="Login"/>

                <Label
                             Grid.Row="1"  
                            Content="User Name"/>

                <Label
                             Grid.Row="2"  
                            Content="Reg Date"/>

                <Label
                             Grid.Row="3"  
                            Content="Rating"/>

                <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Content="{Binding Path=CurrentUser.Rating}"/>

                <Label                          
                            Grid.ColumnSpan="2"
                           Content="{Binding Path=CurrentUser.User_Name}"
                           Grid.Column="1"
                         
                          />

                <Label 
                              Grid.ColumnSpan="2"
                           Grid.Row="1"  
                           Content="{Binding Path=CurrentUser.Login}"
                             Grid.Column="1"
                          />

                <Label 
                              Grid.ColumnSpan="2"
                           Grid.Row="2"  
                           Content="{Binding Path=CurrentUser.Date_Registration, StringFormat=dd-MM-yyyy}"
                            Grid.Column="1"
                         />

            </Grid>

        </Grid>

        <Separator  Grid.ColumnSpan="2"/>

    </Grid>
    
</UserControl>
